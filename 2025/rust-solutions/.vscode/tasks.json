{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "cargo build current bin",
			"type": "shell",
			"command": "cargo",
			"args": [
				"build",
				"--bin",
				"${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$rustc"
			]
		}
	]
}
